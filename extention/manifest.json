{
  "manifest_version": 3,
  "name": "Maang AI Helper",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["*://*.maang.in/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
  {
    "matches": ["*://*.maang.in/*"],
    "js": ["dist/content.bundle.js"],
    "css": ["ui/style.css"]
  }
],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.maang.in/*"]
    }
  ],
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  }
}
